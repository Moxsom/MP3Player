<UserControl x:Class="Mp3PlayerDemo.NowPlaying"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Mp3PlayerDemo"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Background="AntiqueWhite">
        <TextBlock x:Name="nowPlayingTextBlock" Text="Now Playing" FontSize="20" Foreground="Black"/>
        <TextBlock x:Name="songTitleTextBlock" Text="Title" FontWeight="Bold" FontSize="16" Foreground="Black"/>
        <TextBlock x:Name="songAlbumTextBlock" Text="Album" FontSize="14" Foreground="Black"/>
        <TextBlock x:Name="songYearTextBlock" Text="Year" FontSize="12" Foreground="Black"/>
    </StackPanel>
</UserControl>